{
  "name": "theporadas-wedding-site",
  "private": true,
  "version": "1.0.0",
  "description": "The Poradas Wedding Website - A modern Next.js wedding site with photo gallery, event timeline, and Firebase integration",
  "license": "MIT",
  "author": "Austin Porada <austin@theporadas.com>",
  "homepage": "https://theporadas.com",
  "bugs": "https://github.com/bbasketballer75/theporadas_wedding_site/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/bbasketballer75/theporadas_wedding_site.git"
  },
  "type": "module",
  "files": [],
  "scripts": {
    "start": "cd site && npm run dev",
    "start:prod": "cd site && npm run build && npm start",
    "dev": "cd site && npm run dev",
    "build": "cd site && npm run build",
    "lint": "eslint . --max-warnings=10",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --check \"{site,functions}/**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\" --ignore-unknown",
    "format:fix": "prettier --write \"{site,functions}/**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\" --ignore-unknown",
    "setup:dev": "pwsh -NoProfile -ExecutionPolicy Bypass -File ./scripts/setup-dev.ps1",
    "test": "cd site && npm run test:e2e",
    "test:emulator": "cd site && npm run test:e2e -- --project=integration",
    "emulator:start": "firebase emulators:start --project demo-test",
    "emulator:stop": "pwsh -NoProfile -ExecutionPolicy Bypass -Command \"Stop-Process -Name java -Force -ErrorAction SilentlyContinue; Write-Host 'âœ… Firebase emulator stopped'\"",
    "deploy": "firebase deploy",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@modelcontextprotocol/server-filesystem": "^2025.8.21",
    "@playwright/test": "^1.55.1",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-next": "^0.0.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "globals": "^16.4.0",
    "prettier": "^3.3.3",
    "typescript-eslint": "^8.11.0"
  },
  "keywords": [
    "wedding",
    "nextjs",
    "firebase",
    "gallery",
    "pwa"
  ],
  "dependencies": {
    "googleapis": "^162.0.0"
  }
}
