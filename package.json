{
  "name": "theporadas-wedding-site",
  "private": true,
  "version": "1.0.0",
  "description": "The Poradas Wedding Website - A modern Next.js wedding site with photo gallery, event timeline, and Firebase integration",
  "license": "MIT",
  "author": "Austin Porada <austin@theporadas.com>",
  "homepage": "https://theporadas.com",
  "bugs": "https://github.com/bbasketballer75/theporadas_wedding_site/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/bbasketballer75/theporadas_wedding_site.git"
  },
  "type": "module",
  "files": [],
  "workspaces": [
    "site"
  ],
  "scripts": {
    "start": "npm run dev --workspace=site",
    "start:prod": "npm run build --workspace=site && npm start --workspace=site",
    "dev": "npm run dev --workspace=site",
    "build": "npm run build --workspace=site",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --check \"{site,functions}/**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\" --ignore-unknown",
    "format:fix": "prettier --write \"{site,functions}/**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\" --ignore-unknown",
    "test": "npm run test --workspace=site",
    "deploy": "firebase deploy",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@playwright/test": "^1.55.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.30.0",
    "globals": "^16.4.0",
    "prettier": "^3.3.3",
    "typescript-eslint": "^8.11.0"
  },
  "keywords": [
    "wedding",
    "nextjs",
    "firebase",
    "gallery",
    "pwa"
  ],
  "dependencies": {
    "googleapis": "^161.0.0"
  }
}
