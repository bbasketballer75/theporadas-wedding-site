# npm Configuration for Windows Optimization
# Created: October 13, 2025

# Disable package-lock symlinks (Windows compatibility)
package-lock-only=false

# Faster installs
prefer-offline=true

# Network timeout (helpful for slow connections)
fetch-timeout=60000
fetch-retries=3

# Disable progress bar for cleaner CI logs
progress=false

# Engine strict (enforce Node version requirements)
engine-strict=true
